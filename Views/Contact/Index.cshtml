
@model Shop.Models.Conversation
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section JavaScript {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/assets/pages/blog/ckeditor/ckeditor.js"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/assets/pages/contact/contact.js"></script>
}

<div class="row">
    <div class="col-sm-12">
        <!-- Tab variant tab card start -->
        <div class="card">
            <div class="card-header">
                <h5>Contact</h5>
                <div class="card-header-right">
                    <i class="icofont icofont-refresh"></i>
                </div>
            </div>
            <div class="card-block tab-icon">
                <!-- Row start -->
                <div class="row">
                    <div class="col-lg-12 col-xl-12">
                        <!-- Nav tabs -->
                        <div class="tab-content card-block">
                            <div class="tab-pane active" id="cal" role="tabpanel">
                                <div class="data_table_main table-responsive dt-responsive">
                                    <table id="table_Contact" class="table  table-striped table-bordered nowrap" width="100%">
                                        <thead>
                                            <tr>
                                                <th>Id</th>
                                                <th>Email</th>
                                                <th>Message</th>
                                                <th>Time Create</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- Row end -->
            </div>
        </div>
        <!-- Tab variant tab card start -->
    </div>
</div>

<!--Modal Change Product-->
<div class="modal fade" id="my_modal_Reply" tabindex="-1" role="dialog" aria-labelledby="my_modalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">Reply Message</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "myFromReply", @class = "validateDontSubmit" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="modal-body row">
                <input type="hidden" name="hiddenValue_change" id="hiddenValue_change" value="" />
                <div class="col-lg-12">
                    @Html.TextAreaFor(model => model.Message, new { @class = "form-control", @placeholder = "Reply" })
                    @*<textarea class="stext-111 cl2 plh3 size-120 p-lr-28 p-tb-25" name="msg" placeholder="How Can We Help?"></textarea>*@
                    @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
                </div>
            </div>             
                <div class="modal-footer">
                    <button id="btn_reply_mess" type="submit" class="btn btn-primary"><i class="ti-export"></i>Send</button>
                    <button id="btn_Cancel_Blog" type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                </div>
            }
        </div>
    </div>
</div>
<!--Modal Change Product-->
