
@{
    ViewBag.Title = "Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Css {

    @Styles.Render("~/assets/page/category/css")
}
@section JavaScript {
    @*<script src="https://code.jquery.com/jquery-3.3.1.js"></script>*@
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap4.min.js"></script>
    @Scripts.Render("~/assets/page/category/js")
}
<div class="row">
    <div class="col-sm-12">
        <!-- Tab variant tab card start -->
        <div class="card">
            <div class="card-header">
                <h5>Category</h5>
                <div class="card-header-right">
                    <i class="icofont icofont-refresh"></i>
                </div>
            </div>
            <div class="card-block tab-icon">
                <!-- Row start -->
                <div class="row">
                    <div class="col-lg-12 col-xl-12">
                        <!-- Nav tabs -->
                        <ul class="nav nav-tabs md-tabs " role="tablist">
                            <li class="nav-item" style="width:50%">
                                <a class="nav-link active" data-toggle="tab" href="#AddCategory" role="tab"><i class="ti-pencil-alt"></i><h5>Add Category</h5></a>
                                <div class="slide" style="width:50%"></div>
                            </li>
                            <li class="nav-item" style="width:50%">
                                <a class="nav-link" data-toggle="tab" href="#ListCategory" role="tab"><i class="ti-menu-alt"></i><h5>List Category</h5></a>
                                <div class="slide" style="width:50%"></div>
                            </li>
                        </ul>
                        <!-- Tab panes -->
                        <div class="tab-content card-block">
                            <div class="tab-pane active" id="AddCategory" role="tabpanel">
                                <div class="col-sm-8" style="margin:auto">
                                    <div class="form-group row">
                                        <label class="col-sm-4 col-form-label">Gender</label>
                                        <div class="col-sm-8">
                                            <div class="form-radio">
                                                <div id="GenderRadio" class="group-add-on">
                                                    <div class="radio radiofill radio-inline">
                                                        <label>
                                                            <input id="Male" value="1" type="radio" name="radio" checked=""><i class="helper"></i> Male
                                                        </label>
                                                    </div>
                                                    <div class="radio radiofill radio-inline">
                                                        <label>
                                                            <input id="Female" value="0" type="radio" name="radio"><i class="helper"></i> Female
                                                        </label>
                                                    </div>
                                                    <div class="radio radiofill radio-inline">
                                                        <label>
                                                            <input id="Couple" value="2" type="radio" name="radio"><i class="helper"></i> Couple
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-4 col-form-label">Parent Name</label>
                                        <div class="col-sm-8">
                                            <div id="divParentCategory" class="input-group m-b-sm" style="margin-bottom: 0;">
                                                <input type="text" readonly class="form-control" value="Select Parent Category Name" id="inputCategory" aria-describedby="basic-addonRegion" />
                                                @Html.Hidden("ValueParentCategory")
                                                <span class="input-group-addon" id="basic-addonRegion" style="height: 37px;margin-top: 5px;">
                                                    <a id="refreshCategory" data-toggle="tooltip" data-placement="top" title="Refresh">
                                                        <i class="icofont icofont-recycle" style="margin:auto; padding-right:0px"></i>
                                                    </a>
                                                </span>
                                            </div>
                                            <div id="divParentSearch"  style="position: absolute; z-index: 1; background-color: #fff; margin-top:0px;">
                                                <input type="text" id="searchCategory" placeholder="Tìm kiếm" class="form-control" style="margin-top:0px" />
                                                <div data-spy="scroll" style="max-height:150px;overflow:scroll;  background-color: #fff;width: 100%;" id="ParentCategory-tree"></div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-4 col-form-label">Category Name</label>
                                        <div class="col-sm-8">
                                            <input id="input_Category" type="text" class="form-control" placeholder="Category Name">
                                        </div>
                                    </div>
                                    <div>
                                        <hr />
                                        <button id="btnSave" class="btn btn-primary" style="float:right"><i class="ti-import"></i>Save</button>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane" id="ListCategory" role="tabpanel">
                                <div class="col-sm-8" style="margin:auto">
                                    <div class="form-group row">
                                        <label class="col-sm-4 col-form-label">Gender</label>
                                        <div class="col-sm-8">
                                            <div class="form-radio">
                                                <div id="GenderRadio_tab" class="group-add-on">
                                                    <div class="radio radiofill radio-inline">
                                                        <label>
                                                            <input id="Male_tab" value="1" type="radio" name="radio_tab" checked=""><i class="helper"></i> Male
                                                        </label>
                                                    </div>
                                                    <div class="radio radiofill radio-inline">
                                                        <label>
                                                            <input id="Female_tab" value="0" type="radio" name="radio_tab"><i class="helper"></i> Female
                                                        </label>
                                                    </div>
                                                    <div class="radio radiofill radio-inline">
                                                        <label>
                                                            <input id="Couple_tab" value="2" type="radio" name="radio_tab"><i class="helper"></i> Couple
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <hr />
                                <div class="data_table_main table-responsive dt-responsive">
                                    <table id="tableCategory" class="table  table-striped table-bordered nowrap" style=" width:100%">
                                        <thead>
                                            <tr>
                                                <th>Id</th>
                                                <th>Parent Category</th>
                                                <th>Category Name</th>
                                                <th>Gender</th>
                                                <th>Status</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        @*<tbody>
                                                <tr>
                                                    <td>1</td>
                                                    <td>Áo Thun</td>
                                                    <td>Nam</td>
                                                    <td>Áo</td>
                                                    <td>Active</td>
                                                    <td class="dropdown">

                                                    </td>
                                                </tr>
                                            </tbody>*@
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- Row end -->
            </div>
        </div>
        <!-- Tab variant tab card start -->
    </div>
</div>
<!---- Modal Delete---->
<div class="modal fade" id="my_modal" tabindex="-1" role="dialog" aria-labelledby="my_modalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">Notification</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
                Do you want delete record???<br />
                This deletes all child subcategories of category!
                <input type="hidden" name="hiddenValue" id="hiddenValue" value="" />
            </div>
            <div class="modal-footer">
                <button id="btn_OK" type="button" class="btn btn-primary">OK</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>
<!---- Modal Delete---->
<!--Modal Change Category-->
<div class="modal fade" id="my_modal_EditCategory" tabindex="-1" role="dialog" aria-labelledby="my_modalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">Change Category</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Gender</label>
                    <div class="col-sm-8">
                        <div class="form-radio">
                            <div id="GenderRadio_change" class="group-add-on">
                                <div class="radio radiofill radio-inline">
                                    <label>
                                        <input id="Male_change" value="1" type="radio" name="radio_change" checked=""><i class="helper"></i> Male
                                    </label>
                                </div>
                                <div class="radio radiofill radio-inline">
                                    <label>
                                        <input id="Female_change" value="0" type="radio" name="radio_change"><i class="helper"></i> Female
                                    </label>
                                </div>
                                <div class="radio radiofill radio-inline">
                                    <label>
                                        <input id="Couple_change" value="2" type="radio" name="radio_change"><i class="helper"></i> Couple
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Parent Name</label>
                    <div class="col-sm-8">
                        <div id="divParentCategory_change" class="input-group m-b-sm" style="margin-bottom: 0;">
                            <input type="text" readonly class="form-control" value="Select Parent Category Name" id="inputCategory_change" aria-describedby="basic-addonRegion" />
                            @Html.Hidden("ValueParentCategory_change")
                            <span class="input-group-addon" id="basic-addonRegion" style="height: 37px;margin-top: 5px;">
                                <a id="refreshCategory_change" data-toggle="tooltip" data-placement="top" title="Refresh">
                                    <i class="icofont icofont-recycle" style="margin:auto; padding-right:0px"></i>
                                </a>
                            </span>
                        </div>
                        <div id="divParentSearch_change" style="position: absolute; z-index: 1; background-color: #fff; margin-top:0px;">
                            <input type="text" id="searchCategory_change" placeholder="Tìm kiếm" class="form-control" style="margin-top:0px" />
                            <div style="max-height:350px;overflow:scroll;  background-color: #fff;width: 100%;" id="ParentCategory-tree_change"></div>
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Category Name</label>
                    <div class="col-sm-8">
                        <input id="input_Category_change" type="text" class="form-control" placeholder="Category Name">
                    </div>
                </div>
                <input type="hidden" name="hiddenValue_change" id="hiddenValue_change" value="" />
            </div>
            <div class="modal-footer">
                <button id="btn_Save_Category" type="button" class="btn btn-primary"><i class="ti-import"></i>Save</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>
<!--Modal Change Category-->