                    <p>
                        @foreach (AuthenticationDescription p in loginProviders)
                        {
                            <button type="submit" class="btn btn-default" id="@p.AuthenticationType" name="provider" value="@p.AuthenticationType" title="Log in using your @p.Caption account">@p.AuthenticationType</button>
                        }
                    </p>
                </div>*@
            <div id="socialLoginList" class="row m-b-20">
                <div class="col-md-6">
                    <button type="submit" class="btn btn-facebook m-b-20" id="Facebook" name="provider" value="Facebook" title="Log in using your Facebook account"><i class="icofont icofont-social-facebook"></i>Sign in with facebook</button>
                </div>
                <div class="col-md-6">
