
@{
    ViewBag.Title = "Warehouse";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section JavaScript {
    @Scripts.Render("~/assets/page/warehouse/js")
}
<div class="row">
    <div class="col-sm-12">
        <!-- Tab variant tab card start -->
        <div class="card">
            <div class="card-header">
                <h5>Warehouse</h5>
                <div class="card-header-right">
                    <i class="icofont icofont-refresh"></i>
                </div>
            </div>
            <div class="card-block tab-icon">
                <!-- Row start -->
                <div class="row">
                    <div class="col-lg-12 col-xl-12">
                        <!-- Nav tabs -->
                        <ul class="nav nav-tabs md-tabs " role="tablist">
                            <li class="nav-item" style="width:50%">
                                <a class="nav-link active" data-toggle="tab" href="#UpdatNumberOfProduct" role="tab"><i class="ti-pencil-alt"></i><h5>Insert or update number of product</h5></a>
                                <div class="slide" style="width:50%"></div>
                            </li>
                            <li class="nav-item" style="width:50%">
                                <a class="nav-link" data-toggle="tab" href="#ListNumberProduct" role="tab"><i class="ti-menu-alt"></i><h5>List number of product</h5></a>
                                <div class="slide" style="width:50%"></div>
                            </li>
                        </ul>
                        <!-- Tab panes -->
                        <div class="tab-content card-block">
                            <div class="tab-pane active" id="UpdatNumberOfProduct" role="tabpanel">
                                <div class="col-sm-8" style="margin:auto">
                                    <div class="form-group row">
                                        <label class="col-sm-4 col-form-label">Product Name</label>
                                        <div class="col-sm-8">
                                            <select name="select" class="form-control">
                                                <option value="opt1">Select One Value Only</option>
                                                <option value="opt2">Áo</option>
                                                <option value="opt3">Quần</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-4 col-form-label">Product Size</label>
                                        <div class="col-sm-8">
                                            <select name="select" class="form-control">
                                                <option value="opt1">Select One Value Only</option>
                                                <option value="opt2">S</option>
                                                <option value="opt3">M</option>
                                                <option value="opt3">L</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-4 col-form-label">Number</label>
                                        <div class="col-sm-8">
                                            <input type="number" min="0" class="form-control" placeholder="Number">
                                        </div>
                                    </div>
                                    <div>
                                        <hr />
                                        <button class="btn btn-primary" style="float:right"><i class="ti-import"></i>Save</button>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane" id="ListNumberProduct" role="tabpanel">
                                <input type="text" id="myInputSearch" class="form-control" placeholder="Search for names.." title="Type in a name">
                                <hr />
                                <div class="data_table_main table-responsive dt-responsive">
                                    <table id="myTableWarehouse" class="table  table-striped table-bordered nowrap">
                                        <thead>
                                            <tr>
                                                <th>Id</th>
                                                <th>Parent Category</th>
                                                <th>Category Name</th>
                                                <th>Sex</th>
                                                <th>Size</th>
                                                <th>Number</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>1</td>
                                                <td>Áo</td>
                                                <td>Áo Thun</td>
                                                <td>Nam</td>
                                                <td align="center">S</td>
                                                <td align="center">50</td>
                                                <td class="dropdown">
                                                    <button type="button" class="btn btn-primary" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="ti-hand-point-down" aria-hidden="true"></i></button>
                                                    <div class="dropdown-menu dropdown-menu-right b-none contact-menu">
                                                        <a class="dropdown-item" href="#!" data-toggle="modal" data-target="#myEditCustomer"><i class="icofont icofont-edit"></i>Edit</a>
                                                        <a class="dropdown-item" href="#!"><i class="icofont icofont-ui-delete"></i>Delete</a>
                                                    </div>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- Row end -->
            </div>
        </div>
        <!-- Tab variant tab card start -->
    </div>
</div>
